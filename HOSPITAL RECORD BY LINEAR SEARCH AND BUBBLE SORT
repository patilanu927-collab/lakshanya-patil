#include<stdio.h>
#include<stdlib.h>
struct doctor{
  int id;
  char name[40];
  char specialization[50];
  float sal;
}doctor[100],t;
int n=0;

int main(){
  int i,j,c,s,flag=0;
  struct doctor temp;
  while(1)
  
  {
    printf("\n menu\n1.Add record\n2.Display record\n3.sort\n4.search\n5.exit\nEnter your choice\n");
    scanf("%d",&c);
    switch(c){
      case 1:
      printf("\nEnter number of doctors add?");
      scanf("%d",&n);
      for (i = 0; i < n; i++) {
        printf("Enter details for doctor %d:", i+1);
        printf("\nID: ");
        scanf("%d", &doctor[i].id);
        printf("\nName: ");
        scanf("%s",doctor[i].name);
        printf("\nSpecialization: ");
        scanf("%s", doctor[i].specialization);
        printf("\nSalary: ");
        scanf("%f", &doctor[i].sal);
        
      }
      break;
      case 2:
      for(i = 0;i < n;i++){
      printf("\n---------------------------------------------------------------");
      printf("\nid:%d",doctor[i].id);
      printf("\nname:%s",doctor[i].name);
      printf("\nspecialization:%s",doctor[i].specialization);
      printf("\nsalary:%f",doctor[i].sal);
      
      }
      break;
      case 3:
      for (i = 0; i < n-1; i++) {
        for (j = 0; j < n-i-1; j++) {
            if (doctor[j].sal < doctor[j+1].sal) {
                temp = doctor[j];
                doctor[j] = doctor[j+1];
                doctor[j+1] = temp;
            }
        }
      }
      printf("\nSorted the records,use display option to check....");
      break;
      case 4:
      printf("\nEmter doctor id to search...");
      scanf("%d",&s);
      flag = 0;
      for (i = 0;i < n;i++){
        if(doctor[i].id==s){
           printf("\n------------------------------------------------------------------");
           printf("\nid:%d",doctor[i].id);
           printf("\nname:%s",doctor[i].name);
           printf("\nspecialization:%s",doctor[i].specialization);
           printf("\nsalary:%f",doctor[i].sal); 
           flag=1;
           break;
        }
        if(flag==0){
            printf("\nRECORD NOT FOUND !!");
        }
      }
      break;
      case 5:
       exit(0);
       break;
       
      default:
       printf("\nINVALID CHOICE!");
      
    
        
      
    }
  }
  return 0;
}
